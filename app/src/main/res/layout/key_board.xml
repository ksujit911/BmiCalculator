<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:columnCount="4"
        android:rowCount="4"
        android:background="#FFDAD3D3">

        <Button
            android:id="@+id/b_one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_ac"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="AC"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/ic_baseline_backspace_24"
            android:padding="20dp"
            android:backgroundTint="#FFDAD3D3"
            android:contextClickable="true"/>

        <Button
            android:id="@+id/b_seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>



        <Button
            android:id="@+id/b_eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_go"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="GO"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="2"
            android:backgroundTint="#FB450C"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:textSize="30dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:backgroundTint="#FFDAD3D3"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/b_dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="."
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFDAD3D3"/>


    </GridLayout>

</RelativeLayout>